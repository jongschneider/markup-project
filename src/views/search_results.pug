  h1 #{title}
  table.table.table-striped
    caption List of All Files
    thead
      tr
        th Date
        th File Name
        th Score
    tbody
      each row in results
        tr
          td #{row.score_runtime}
          td #{row.html_filenames_html_filename}
          td #{row.score}
        tr
  h3 AVG #{avg[0].avg}
